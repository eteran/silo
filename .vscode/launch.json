    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Silo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/silo",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Launch Silo UI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/silo-ui",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "templ generate"
        },
        {
            "name": "Launch Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/example",
            "cwd": "${workspaceFolder}",
        }
    ],
    "compounds": [
        {
            "name": "Full Stack",
            "configurations": [
                "Launch Silo",
                "Launch Silo UI"
            ],

            "stopAll": true,
        }
    ]
}
